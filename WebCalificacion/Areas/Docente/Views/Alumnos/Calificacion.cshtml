@model WebCalificacion.Models.Calificacion
@{
    ViewData["Title"] = "Calificacion";
}

<!DOCTYPE html>
<html>
<head>
    <title>Sistema de Calificaciones</title>
    <style>
        html {
            background-color: cornflowerblue;
        }

        body {
            position: relative;
            padding: 0 10px;
            background-color: #2f00ff3f;
            width: 30%;
            margin: auto;
        }

            body > h1 {
                color: white;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                font-size: 40px;
                text-align: center;
            }

        form {
            display: block;
            position: relative;
        }

        label {
            color: white;
            margin: auto;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 20px;
            display: block;
            width: 100%;
        }

        form > input[type=number] {
            display: inline-block;
            font-size: 20px;
            margin-bottom: 10px;
            width: 100%;
        }

        form > input[type=submit] {
            display: block;
            background-color: tomato;
            border: 1px solid black;
            font-size: 20px;
            margin: auto;
            width: 80%;
        }

            form > input[type=submit]:hover {
                cursor: pointer;
                background-color: rgb(255, 164, 148);
            }

            form > input[type=submit]:active {
                cursor: pointer;
                background-color: rgb(131, 56, 43);
            }

        body > a {
            display: inline-block;
            width: 200px;
            height: 25px;
            text-align: center;
            padding-top: 2px;
            background-color: blue;
            color: white;
            text-decoration: none;
            font-size: larger;
        }

        #ac {
            width: 250px;
            display: block;
            position: absolute;
            right: 10px;
        }

            #ac > a {
                background-color: tomato;
                display: block;
                position: absolute;
                text-align: center;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                width: 70%;
                color: white;
                text-decoration: none;
                font-size: 20px;
            }

        #btnAg {
            position: absolute;
            background-color: darkblue;
            right: 10px;
        }
    </style>
</head>
<body>
    <h1>Calificacion</h1>
    <form method="post" action="~/Docente/Alumnos/Calificacion">
        <label>Materia: </label>
        <input name="Id" value="@Model.Id" hidden />
        <label>@Model.IdNavigation.IdNombreMateriaNavigation.NombreMateria1</label><br />
        <label>Alumno: </label>
        <label>@Model.IdNavigation.IdAlumnoNavigation.NombreAlumno</label><br />
        <label>Periodo 1:</label>
        <input type="number" id="P1" name="P1" onchange="calculo()"  value="@Model.P1" /><br>
        <label>Periodo 2:</label>
        <input type="number" id="P2" name="P2" onchange="calculo()"  value="@Model.P2" /><br>
        <label>Periodo 3:</label>
        <input type="number" id="P3" name="P3" onchange="calculo()"  value="@Model.P3" />
        <label id="pflbl"></label>
        <br />
        <input type="submit" />
    </form>
</body>
<script>
    var txtPF = document.getElementById('pflbl');
    const txt1 = document.getElementById("P1");
    const txt2 = document.getElementById("P2");
    const txt3 = document.getElementById("P3");

    function calculo() {
        let txt1V = parseInt(txt1.value);
        let txt2V = parseFloat(txt2.value);
        let txt3V = parseFloat(txt3.valueAsNumber);
        txtPF.innerHTML = "Promedio Final: " + ((txt1V + txt2V + txt3V) / 3).toFixed(2);
    }
    calculo();
</script>
</html>



