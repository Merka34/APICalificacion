@model WebCalificacion.Models.Alumno
@{
    ViewData["Title"] = "Eliminar";
}

<!DOCTYPE html>
<html>
<head>
    <link href="StyleSheet1.css" rel="stylesheet" />
    <title>Sistema de Calificaciones</title>
    <style>
        html {
            background-color: cornflowerblue;
        }

        body {
            position: relative;
            padding: 0 10px;
            background-color: #2f00ff3f;
            width: 50%;
            margin: auto;
        }

            body > h1 {
                color: white;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                font-size: 40px;
                text-align: center;
            }

        form {
            display: block;
            position: relative;
        }

        body > label {
            color: white;
            margin: auto;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 20px;
            display: block;
            width: 100%;
        }

        form > input[type=text] {
            display: inline-block;
            font-size: 20px;
            margin-bottom: 10px;
            width: 40%;
        }

        form > input[type=submit] {
            display: block;
            background-color: tomato;
            border: 1px solid black;
            font-size: 20px;
            margin: auto;
            width: 80%;
        }

            form > input[type=submit]:hover {
                cursor: pointer;
                background-color: rgb(255, 164, 148);
            }

            form > input[type=submit]:active {
                cursor: pointer;
                background-color: rgb(131, 56, 43);
            }

        body > a {
            display: inline-block;
            width: 200px;
            height: 25px;
            text-align: center;
            padding-top: 2px;
            background-color: blue;
            color: white;
            text-decoration: none;
            font-size: larger;
        }

        #ac {
            width: 250px;
            display: block;
            position: absolute;
            right: 10px;
        }

            #ac > a {
                background-color: tomato;
                display: block;
                position: absolute;
                text-align: center;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                width: 70%;
                color: white;
                text-decoration: none;
                font-size: 20px;
            }

        #btnAg {
            position: absolute;
            background-color: darkblue;
            right: 10px;
        }
    </style>
</head>
<body>
    <h1>Eliminar Alumno</h1>
    <label>¿Desea dar de baja al alumno @Model.NombreAlumno ?</label>
    <form method="post" action="~/Docente/Alumnos/Eliminar">
        <input name="id" value="@Model.Id" hidden />
        <input type="submit" value="Eliminar" />
        <p>@Html.ValidationSummary()</p>
    </form>
</body>
</html>

